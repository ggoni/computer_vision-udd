# Computer Vision Backend Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL async connection URL
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://cv_user:cv_password@localhost:5432/cv_database

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection URL for caching and task queue
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
# Directory for uploaded files (relative to backend root)
UPLOAD_DIR=storage/uploads

# Maximum upload file size in bytes (10MB default)
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# ML MODEL CONFIGURATION
# =============================================================================
# Hugging Face model identifier for object detection
MODEL_NAME=huggingface/yolos-tiny

# Directory for cached ML models (relative to backend root)
MODEL_CACHE_DIR=.cache/models

# Minimum confidence threshold for detections (0.0 to 1.0)
CONFIDENCE_THRESHOLD=0.5

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# SECURITY (REQUIRED IN PRODUCTION)
# =============================================================================
# Secret key for sessions/JWT - CHANGE IN PRODUCTION!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# =============================================================================
# DOCKER/PRODUCTION OVERRIDES
# =============================================================================
# When running in Docker, update these URLs to match your services:
# DATABASE_URL=postgresql+asyncpg://cv_user:cv_password@postgres:5432/cv_database
# REDIS_URL=redis://redis:6379/0